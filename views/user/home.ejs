        async function addToCart(id) {
            const quantity =1
             
            Swal.fire({
                title:"Add to Cart",
                allowOutsideClick:false,
                didOpen:()=>{
                    Swal.showLoading();
                
                }
            });
            try {
                const response=await fetch(`/addToCart`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ 
                        quantity: parseInt(quantity),
                        productId: id 
                    }),
                })
                const data = await response.json(); 
                if (response.ok) {
              
                    Swal.fire({
                        title: 'Added to Cart!',
                        text: `Successfully added ${quantity} item(s) to your cart`,
                        icon: 'success',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Go to Cart',
                        cancelButtonText: 'Continue Shopping'
                    }).then((result) => {
                        if (result.isConfirmed) {
                          
                            window.location.href = '/showCart';
                        }
                    });
                } else {
                
                    Swal.fire({
                        title: 'Oops...',
                        text: 'Failed to add item to cart. Please try again.',
                        icon: 'error',
                        confirmButtonColor: '#3085d6'
                    });
                }
            
                
            } catch (error) {
                console.error("Error:", error);
                
                Swal.fire({
                    title: 'Error!',
                    text: 'Something went wrong. Please try again later.',
                    icon: 'error',
                    confirmButtonColor: '#3085d6'
                });
                
            }
            
        }


        async function addToWishlist(id) {
    Swal.fire({
        title: "Add to Wishlist",
        allowOutsideClick: false,
        didOpen: () => {
            Swal.showLoading();
        }
    });

    try {
        const response = await fetch(`/addToWishlist`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ 
                productId: id 
            }),
        });

        const data = await response.json();

        if (response.ok) {
            Swal.fire({
                title: 'Added to Wishlist!',
                text: 'Item successfully added to your wishlist',
                icon: 'success',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Go to Wishlist',
                cancelButtonText: 'Continue Shopping'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/wishlist';
                }
            });
        } else {
           
            let errorMessage = 'Failed to add item to wishlist. Please try again.';
            if (data.message === 'Product already in wishlist') {
                errorMessage = 'This item is already in your wishlist.';
            } else if (data.message === 'Please login first') {
                errorMessage = 'Please login to add items to your wishlist.';
            }
            
            Swal.fire({
                title: 'Oops...',
                text: errorMessage,
                icon: 'error',
                confirmButtonColor: '#3085d6'
            });
        }
    } catch (error) {
        console.error("Error:", error);
        Swal.fire({
            title: 'Error!',
            text: 'Something went wrong. Please try again later.',
            icon: 'error',
            confirmButtonColor: '#3085d6'
        });
    }
}



